@import 'nib'
@import 'dzslides'

AccentLabRed = #AA0F14
AccentLabGrey = #AFAFAF
LabAccentBlue = #41AAF5
LabAccent2 = #8C5000
LabAccent3 = #FFA500
LabAccent4 = #780000
LabAccent5 = #FF3232
LabAccent6 = #64AA00
CoverTitle = #BEBEBE
SecondBody = #7D7D7D
SubHead =    #353535


body
  font-family: Futura
  background-image: url("Logo Lab49 Small.png")
  background-repeat: no-repeat
  background-position: 99% 99%

section 
  font-family: Futura
h1
  font-size: 48px
  color: AccentLabRed
h2
  font-size: 36px  
  color: AccentLabGrey
h3
  font-size: 28px  
  color: AccentLabGrey
h4
  font-size: 24px  
  color: AccentLabGrey
h5
  font-size: 18px  
  color: AccentLabGrey
ul
  list-style: url(bullet_Arrow_Red_24.png)
  padding-left: 30px
  li
    color: AccentLabGrey    
    font-size: 24px
    ul
      list-style: url(bullet_Arrow_Grey_24.png)
      font-size: 20px

ol
  list-style: decimal;
  list-style-position: outside;
  padding-left: 30px;

pre
  padding: 10px
  margin-left: 50px 
  margin-top: 50px
  margin-right: 400px
  margin-bottom: 50px
  background-color: SubHead
  color: white

p
  margin-top: 15px;

A:link
  color: LabAccentBlue
A:visited
  color: LabAccent4
A:hover
  color: LabAccent3
